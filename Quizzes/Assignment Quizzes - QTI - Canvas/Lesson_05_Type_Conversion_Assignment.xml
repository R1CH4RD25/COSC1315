          <material>
            <mattext texttype="text/html">&lt;p&gt;This code produces a TypeError. How do you fix it?&lt;/p&gt;
&lt;pre&gt;birth_year = input("Birth year: ")
age = 2024 - birth_year
print(age)&lt;/pre&gt;</mattext>
          </material>
          <response_lid ident="response1" rcardinality="Single">
            <render_choice>
              <response_label ident="a">
                <material>
                  <mattext texttype="text/plain">Change line 2 to: age = 2024 - int(birth_year)</mattext>
                </material>
              </response_label>
              <response_label ident="b">
                <material>
                  <mattext texttype="text/plain">Change line 2 to: age = "2024" - birth_year</mattext>
                </material>
              </response_label>
              <response_label ident="c">
                <material>
                  <mattext texttype="text/plain">Change line 3 to: print(str(age))</mattext>
                </material>
              </response_label>
              <response_label ident="d">
                <material>
                  <mattext texttype="text/plain">Add quotation marks: birth_year = "input"("Birth year: ")</mattext>
                </material>
              </response_label>
            </render_choice>
          </response_lid>
        </presentation>
        <resprocessing>
          <outcomes>
            <decvar maxvalue="100" minvalue="0" varname="SCORE" vartype="Decimal"/>
          </outcomes>
          <respcondition continue="No">
            <conditionvar>
              <varequal respident="response1">a</varequal>
            </conditionvar>
            <setvar action="Set" varname="SCORE">100</setvar>
          </respcondition>
        </resprocessing>
      </item>

